{
    "name": "evelution87/file-input",
    "description": "A drag and drop file input Blade component using Alpine JS",
    "keywords": [
        "evelution87",
        "file-input"
    ],
    "homepage": "https://github.com/evelution87/file-input",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Craig Eve",
            "email": "craig@evelution.net",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Evelution87\\FileInput\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Evelution87\\FileInput\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Evelution87\\FileInput\\FileInputServiceProvider"
            ],
            "aliases": {
                "FileInput": "Evelution87\\FileInput\\FileInputFacade"
            }
        }
    }
}
